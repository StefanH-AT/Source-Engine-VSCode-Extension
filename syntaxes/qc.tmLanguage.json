{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Valve QC",
	"scopeName": "source.qc",
    "patterns": [
        {
			"include": "source.kv#comment"
		},
        {
            "include": "#variable"
        },
        {
            "include": "#blockComment"
        },
        {
            "include": "#command"
        },
        {
			"include": "source.kv#number"
		},
        {
			"include": "source.kv#stringQuoted"
		},
        {
			"include": "#stringUnquoted"
		}
	],
    "repository": {
        "variable": {
            "match": "(\\$([\\w]+)\\$)",
            "captures": {
                "1": {
                    "name": "keyword.qc"
                },
                "2": {
                    "name": "variable.qc"
                }
            }
        },
        "command": {
            "match": "\\B(\\$(\\w+))",
            "captures": {
                "1": {
                    "name": "keyword.qc"
                },
                "2": {
                    "name": "command.qc"
                }
            }
        },
        "blockComment": {
            "begin": "/\\*",
            "end": "\\*/",
            "name": "comment.block"
        },
        "stringUnquoted": {
            "name": "string.unquoted.qc",
            "match": "[\\|~%&!-#(-:<-z]+"
        }
    }
}